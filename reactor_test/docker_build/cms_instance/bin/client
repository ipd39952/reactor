#!/bin/sh

executableDir=`dirname "$0"`
baseDir=`cd "$executableDir/../../.." && /bin/pwd`

PATH="$baseDir"/3rdparty/bin:"$PATH"
export PATH

test -x "$baseDir"/3rdparty/bin/tclsh && {
    for path in "$baseDir"/3rdparty/lib/tcl?.?; do
        TCL_LIBRARY="$path"
        export TCL_LIBRARY
    done
    TCLLIBPATH="$baseDir"/3rdparty/lib
    export TCLLIBPATH
}

LD_LIBRARY_PATH="$baseDir"/lib:"$baseDir"/3rdparty/lib:"$LD_LIBRARY_PATH"
export LD_LIBRARY_PATH

exec tclsh "$baseDir/lib/client.tcl" "$@"
